{% extends 'frontend/base.html.twig' %}



{% block content %}
    <!-- login form -->

    <div class="section section-contact-us text-center">
        <div class="container text-center">


            <h4>Login</h4>
            <div class="row justify-content-md-center">
                <div class="col-md-4 offset-md-2 text-center">
                    <div class="card card-login card-plain">
                        <form action="{{ path('admin_login_check') }}" method="post">

                            <div class="input-group input-lg">
                                {{ error }}
                                <span class="input-group-addon">
                                <i class="now-ui-icons users_circle-08"></i>
                            </span>
                                <input id="username" type="text" name="_username" value="{{ last_username }}" class="form-control" placeholder="Your Name...">
                            </div>



                            <div class="input-group input-lg">
                            <span class="input-group-addon">
                                <i class="now-ui-icons ui-1_lock-circle-open"></i>
                            </span>
                                <input type="password" name="_password" class="form-control" value="" placeholder="Password...">

                            </div>



                            <div class="send-button">
                                <input type="hidden" name="_target_path" value="/admin/dashboard"/>
                                <input class="btn btn-primary btn-round btn-block btn-lg" type="submit" name="action" value="submit"></input>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
