{% extends 'frontend/base.html.twig' %}

{% block content %}


    <div class="wrapper">
        <div class="page-header page-header-lg">
            <div class="page-header-image" data-parallax="true" style="background-image: url('/img/greg-rakozy-129733.jpg');">
            </div>
            <div class="container">
                <div class="content-center">
                    <h1 class="title">SolidSites<br>Web Development</h1>
                    <h2 class="title">Website and application development</h2>
                    <div class="text-center">
                        <a class="btn btn-primary btn-lg" href="#about-us">What do we do?</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="section section-about-us" id="about-us">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8 ml-auto mr-auto text-center">
                        <h2 class="title">What we do</h2>
                        <h3 class="description">We design and develop responsive, functional websites to give your business a strong web presence.</h3>
                        <img src="/fonts/svg/opened_folder.svg" alt="design icon" class="large-icon m-4">
                        <h6 class="category pb-2">Try our packages</h6>
                        <p class="mx-auto mb-5">Choose from one of our pre developed packages which all come with web hosting for a year and a range of
                            other features. Or roll your own and let us create something unique for you.</p>
                        <img src="/fonts/svg/upload.svg" alt="cell phone icon" class="large-icon m-4">
                        <h6 class="category pb-2">Host with us</h6>
                        <p class="mb-5">All our packages come with modern cloud hosting from Digital Ocean. Meaning you get a dedicated VPS specially for your
                            website.</p>
                        <img src="/fonts/svg/org_unit.svg" alt="gear icon" class="large-icon m-4">
                        <h6 class="category pb-2">Easily extend your
                            website.</h6>
                        <p class="mx-auto mb-5">Not sure if you need a website with all the bells and whistles? No problem. Start small and expand as you
                            need it. All our websites are coded in a modular way making them easy to grow with your business.</p>
                        <a class="btn btn-primary btn-lg m-2" href="#packages">What packages have you?</a>
                    </div>

                </div>
            </div>

            <div class="separator separator-primary"></div>
        </div>


        <!-- Packages Section -->

        <div id="packages" class="section section-team text-center package-card">
            <div class="container-fluid">
                <h2 class="title text-white">Our Packages</h2>

                <div class="row">

                    {% for package in packages %}
                        <div class="col-md-4">
                            <h3 class="text-white">{{ package.name|upper }}</h3>
                            <div class="separator separator-primary"></div>
                            <p class="category text-primary">{{ package.description }}</p>
                            <p class="text-white">{{ package.info }}</p>
                            <div class="separator separator-primary"></div>
                            <p class="text-white">From &euro;{{ package.price }}</p>
                            <a href="/{{ package.slug|slugify }}" class="btn btn-lg btn-outline-primary details-btn">More Details</a>

                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
        <!-- Projects section -->
        <div class="section text-center" id="projects">
            <div class="container-fluid">

                <h2 class="title">Recent Projects</h2>
                <div class="row justify-content-md-center">
                    <div class="col-md-10">
                        <div class="card card-inverse" data-toggle="modal" data-target="#projectModal1">
                            <div class="project-section">
                                <div class="project-section-one">
                                    <div class="card-img-overlay">
                                        <h2 class="card-title">The <span>RecordBox</span></h2>
                                        <a href=""></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-md-center">
                    <div class="col-md-10">
                        <div class="card card-inverse" data-toggle="modal" data-target="#projectModal2">
                            <div class="project-section">
                                <div class="project-section-two">
                                    <div class="card-img-overlay">
                                        <h2 class="card-title">La boite<span> a musiques</span></h2>
                                        <a href="" data-toggle="modal" data-target="#projectModal1"></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-md-center">
                    <div class="col-md-10">
                        <div class="card card-inverse">
                            <div class="project-section">
                                <div class="project-section-three">
                                    <div class="card-img-overlay">
                                        <h2 class="card-title">McGoverns <span>garage</span></h2>
                                        <a href="" data-toggle="modal" data-target="#projectModal1"></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-md-center">
                    <div class="col-md-10">
                        <div class="card card-inverse">
                            <div class="project-section">
                                <div class="project-section-four">
                                    <div class="card-img-overlay">
                                        <h2 class="card-title">Dave <span>gearty</span></h2>
                                        <a href="" data-toggle="modal" data-target="#projectModal1"></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- contact form -->

        <div class="section section-contact-us text-center">
            <div class="container">
                <h2 class="title">Want to work with us?</h2>
                <p class="description">Your project is very important to us.</p>
                <div class="row">
                    <div class="col-lg-6 text-center col-md-8 ml-auto mr-auto">
                        {{ render(controller('Solidsites\\Controllers\\FrontendController::contactFormAction')) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


    {# modals #}
    {% include 'frontend/partials/modals.html.twig' %}
    {# the footer #}
    {% include 'frontend/partials/footer.html.twig' %}

{% endblock %}
{#<!-- custom js -->#}
{% block scripts %}
    <script src="/js/custom.js" type="text/javascript"></script>
{% endblock %}