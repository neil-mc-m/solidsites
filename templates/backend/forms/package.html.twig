{% extends 'backend/adminBase.html.twig' %}
{% block content %}


    <form action="" method="post">
        <h4>edit your package here</h4>
        {{ form_errors(form) }}
        <div class="row">
            <div class="input-field col s6">
                {{ form_errors(form.name) }}
                {{ form_widget(form.name) }}
                {{ form_label(form.name) }}
            </div>
        </div>



        <div class="row">
            <div class="input-field col s6">
                {{ form_errors(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_label(form.description) }}
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                {{ form_errors(form.info) }}
                {{ form_widget(form.info) }}
                {{ form_label(form.info) }}
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                {{ form_errors(form.created_at) }}
                {{ form_widget(form.created_at) }}
                {{ form_label(form.created_at) }}
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                {{ form_errors(form.updated_at) }}
                {{ form_widget(form.updated_at) }}
                {{ form_label(form.updated_at) }}
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                {{ form_errors(form.slug) }}
                {{ form_widget(form.slug) }}
                {{ form_label(form.slug) }}
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>

    </form>

{% endblock %}